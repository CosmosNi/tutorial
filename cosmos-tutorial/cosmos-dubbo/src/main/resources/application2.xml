<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan base-package="com.cosmos.dubbo"/>

    <context:property-placeholder location="classpath:rpc.properties"/>

    <bean id="serviceRegistry" class="com.cosmos.dubbo.zookeeper.RpcRegistry">
        <property name="rpcRegistryAddress" value="${registry.address}"/>
    </bean>
    <bean id="rpcServer" class="com.cosmos.dubbo.server.RpcServer">
        <property name="serverAddress" value="${server.address2}"/>
        <property name="rpcRegistry" ref="serviceRegistry"/>
    </bean>

</beans>